소문자를 구하시오(switch를 사용해서)

#include<stdio.h>

int main(void)
{
 char ch;

 printf("문자를 입력하시오:");
 scanf("%c", &ch);

 if (ch >= 'a' && ch <= 'z')
 {
  switch (ch)
  {
  case 'a':
   printf("%c는 모음입니다.\n", ch);
   break;
  case 'e':
   printf("%c는 모음입니다.\n", ch);
   break;
  case 'i':
   printf("%c는 모음입니다.\n", ch);
   break;
  case 'o':
   printf("%c는 모음입니다.\n", ch);
   break;
  case 'u':
   printf("%c는 모음입니다.\n", ch);
   break;
  }

   if (!(ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u'))
   printf("%c는 자음입니다.\n", ch);
 }

 else
 {
  printf("%c는 소문자가 아닙니다.\n", ch);

 }
 return 0;
}
